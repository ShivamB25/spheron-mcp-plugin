{
  "name": "spheron-mcp-plugin",
  "version": "1.0.0",
  "description": "The MCP server to interact with Spheron Network",
  "private": true,
  "license": "MIT",
  "type": "module",
  "bin": {
    "spheron-mcp-plugin": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "bun run clean && tsc && node --eval \"import('fs').then(fs => fs.chmodSync('build/index.js', '755'))\"",
    "build:watch": "tsc --watch",
    "clean": "rimraf ./build",
    "prepare": "bun run build",
    "start": "bun run build && node build/index.js",
    "dev": "bun run build && bun run start",
    "type-check": "tsc --noEmit",
    "inspector": "bunx @modelcontextprotocol/inspector build/index.js",
    "docker:build": "docker build -t spheronfdn/spheron-mcp:latest .",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down",
    "validate": "bun run type-check && bun run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@spheron/protocol-sdk": "^1.3.6-staging.2",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "winston": "^3.11.0",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.8",
    "rimraf": "^6.0.1"
  }
}
